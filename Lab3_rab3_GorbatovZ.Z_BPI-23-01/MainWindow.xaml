<Window x:Class="Lab3_rab3_GorbatovZ.Z_BPI_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3_rab3_GorbatovZ.Z_BPI_23_01" 
        xmlns:local1="clr-namespace:Lab3_rab3_GorbatovZ.Z_BPI_23_01.ViewModels"
        mc:Ignorable="d"
        Title="Вычисление функций" Height="470" Width="900" MaxHeight="470" MaxWidth="900" MinHeight="470" MinWidth="900"
        Background="#FFF5F5F5">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/DictionaryStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
        <StackPanel>
            <Border BorderBrush="#FFBBDEFB" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,2">
                <RadioButton IsChecked="True" Margin="5" Name="Radiol" GroupName="grop">
                    <RadioButton.DataContext>
                        <local1:FunctionViewModelA />
                    </RadioButton.DataContext>
                    <WrapPanel DataContext="{Binding MyFunc}">
                        <Image Source="{Binding Path}" Height="35" Stretch="UniformToFill"/>
                        <GroupBox Header="Параметры функции 1" Width="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                                <TextBox Text="{Binding A, StringFormat=N2}" Grid.Column="1" Grid.Row="0" />

                                <Label Content="f = " Grid.Column="0" Grid.Row="1"/>
                                <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding F}" SelectedIndex="{Binding Index}"/>

                                <Label Content="Результат:" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Result, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                           Grid.Column="2" Grid.Row="1" Style="{StaticResource ResultTextStyle}"/>
                            </Grid>
                        </GroupBox>
                    </WrapPanel>
                </RadioButton>
            </Border>

            <Border BorderBrush="#FFBBDEFB" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,2">
                <RadioButton Margin="5" Name="Radio2" GroupName="grop">
                    <RadioButton.DataContext>
                        <local1:FunctionViewModelB/>
                    </RadioButton.DataContext>
                    <WrapPanel>
                        <Image Source="{Binding ImagePath}" Height="35" />
                        <GroupBox Header="Параметры функции 2" Width="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                                <TextBox Text="{Binding A, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0"/>

                                <Label Content="b = " Grid.Column="2" Grid.Row="0"/>
                                <TextBox Text="{Binding B, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="0"/>

                                <Label Content="f = " Grid.Column="0" Grid.Row="1"/>
                                <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding cmbContent}" SelectedIndex="{Binding Index}"/>

                                <Label Content="Результат:" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Result, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                           Grid.Column="3" Grid.Row="1" Style="{StaticResource ResultTextStyle}"/>
                            </Grid>
                        </GroupBox>
                    </WrapPanel>
                </RadioButton>
            </Border>

            <Border BorderBrush="#FFBBDEFB" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,2">
                <RadioButton Margin="5" Name="Radio3" GroupName="grop">
                    <RadioButton.DataContext>
                        <local1:FunctionViewModelC/>
                    </RadioButton.DataContext>
                    <WrapPanel>
                        <Image Source="{Binding ImagePath}" Height="35"  />
                        <GroupBox Header="Параметры функции 3" Width="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                                <TextBox Text="{Binding A, StringFormat=N2}" Grid.Column="1" Grid.Row="0"/>

                                <Label Content="b = " Grid.Column="2" Grid.Row="0"/>
                                <TextBox Text="{Binding B, StringFormat=N2}" Grid.Column="3" Grid.Row="0"/>

                                <Label Content="c = " Grid.Column="0" Grid.Row="1"/>
                                <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding cmbContentC}" SelectedIndex="{Binding IndexC}"/>
                                <Label Content="d = " Grid.Column="2" Grid.Row="1"/>
                                <ComboBox Grid.Column="3" Grid.Row="1" ItemsSource="{Binding cmbContentD}" SelectedIndex="{Binding IndexD}"/>

                                <Label Content="Результат:" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Result, StringFormat=N2}" Grid.Column="4" Grid.Row="1" 
                                           Style="{StaticResource ResultTextStyle}"/>
                            </Grid>
                        </GroupBox>
                    </WrapPanel>
                </RadioButton>
            </Border>

            <Border BorderBrush="#FFBBDEFB" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,2">
                <RadioButton Margin="5" Name="Radio4" GroupName="grop">
                    <RadioButton.DataContext>
                        <local1:FunctionViewModelD/>
                    </RadioButton.DataContext>
                    <WrapPanel>
                        <Image Source="{Binding ImagePath}" Height="70"  Stretch="UniformToFill"/>
                        <GroupBox Header="Параметры функции 4" Width="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                                <TextBox Text="{Binding A, StringFormat=N2}" Grid.Column="1" Grid.Row="0"/>

                                <Label Content="d = " Grid.Column="2" Grid.Row="0"/>
                                <TextBox Text="{Binding D}" Grid.Column="3" Grid.Row="0"/>

                                <Label Content="f = " Grid.Column="0" Grid.Row="1"/>
                                <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding cmbContent}" SelectedIndex="{Binding IndexC}"/>

                                <Label Content="Результат:" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Result, StringFormat=N2}" Grid.Column="3" Grid.Row="1" 
                                           Style="{StaticResource ResultTextStyle}"/>
                            </Grid>
                        </GroupBox>
                    </WrapPanel>
                </RadioButton>
            </Border>

            <Border BorderBrush="#FFBBDEFB" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,2">
                <RadioButton Margin="5" Name="Radio5" GroupName="grop">
                    <RadioButton.DataContext>
                        <local1:FunctionViewModelE/>
                    </RadioButton.DataContext>
                    <WrapPanel>
                        <Image Source="{Binding ImagePath}" Height="75"  Stretch="UniformToFill" />
                        <GroupBox Header="Параметры функции 5" Width="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="x = " Grid.Column="0" Grid.Row="0"/>
                                <TextBox Text="{Binding X, StringFormat=N2}" Grid.Column="1" Grid.Row="0"/>

                                <Label Content="y = " Grid.Column="2" Grid.Row="0"/>
                                <TextBox Text="{Binding Y, StringFormat=N2}" Grid.Column="3" Grid.Row="0"/>

                                <Label Content="N = " Grid.Column="0" Grid.Row="1"/>
                                <TextBox Text="{Binding N}" Grid.Column="1" Grid.Row="1"/>
                                <Label Content="K = " Grid.Column="2" Grid.Row="1"/>
                                <TextBox Text="{Binding K}" Grid.Column="3" Grid.Row="1"/>

                                <Label Content="Результат:" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Result, StringFormat=N2}" Grid.Column="4" Grid.Row="1" 
                                           Style="{StaticResource ResultTextStyle}"/>
                            </Grid>
                        </GroupBox>
                    </WrapPanel>
                </RadioButton>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>